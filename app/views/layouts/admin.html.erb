<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="flex">
        <div class="flex w-full">
            <nav class="w-64 h-screen bg-gray-600 sticky top-0">
                <div class="flex px-2 py-2">
                    <h1 class="text-gray-50 font-bold hidden md:block">Ecommerce</h1>
                </div>

                <ul class="flex flex-col">
                    <li>
                        <%= link_to admin_path ,class:"text-gray-50 px-4 py-2 hover:rounded-md hover:bg-gray-700" do %>
                            <%= icon("fa-solid", "gauge", class:"mr-2")%> <span class="hidden sm:inline-block">Dashboard</span>
                        <% end %>
                    </li>

                    <li>
                        <%= link_to admin_path ,class:"text-gray-50 px-4 py-2 hover:rounded-md hover:bg-gray-700" do %>
                            <%= icon("fa-solid", "cart-shopping", class:"mr-2")%> <span>Product</span>
                        <% end %>
                    </li>

                    <li>
                        <%= link_to admin_categories_path ,class:"text-gray-50 px-4 py-2 hover:rounded-md hover:bg-gray-700" do %>
                            <%= icon("fa-solid", "list", class:"mr-2")%> <span>Categories</span>
                        <% end %>
                    </li>

                    <li>
                        <%= link_to admin_path ,class:"text-gray-50 px-4 py-2 hover:rounded-md hover:bg-gray-700" do %>
                            <%= icon("fa-solid", "truck-fast", class:"mr-2")%> <span>Orders</span>
                        <% end %>                 
                    </li>
                </ul>

            </nav>
            <div class=" p-8">
                <%= yield %>
            </div>
        </div>
        
    </main>
  </body>
</html>
